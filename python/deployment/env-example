MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Batcher Configuration
BATCHER_BATCH_SIZE=50
BATCHER_METRICS_PORT=9000
# For Docker/K8s: Set automatically by docker-compose.yaml or ConfigMap
# For local: Use --cluster-idx-filename parameter

# Worker Configuration
WORKER_METRICS_PORT=9001
MIN_TEXT_LENGTH=500
MAX_TEXT_LENGTH=1000000

# Tokenizer Configuration
TOKENIZER_NAME=bert-base-uncased    # HuggingFace tokenizer model name
