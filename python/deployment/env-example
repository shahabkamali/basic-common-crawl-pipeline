# RabbitMQ Configuration
RABBITMQ_CONNECTION_STRING=amqp://guest:guest@localhost:5672/

# Storage Configuration
STORAGE_TYPE=minio              # Storage backend: minio or s3

# MinIO Configuration
BUCKET_NAME=extracteddata
